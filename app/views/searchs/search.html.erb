<% if @model == 'customer' %>
  <h3>【Customersモデルの検索結果】検索ワード：<%= @content %></h3>
  <table class='table'>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <% @records.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <% if customer_signed_in? %>
            <td><%= link_to 'ユーザー詳細', public_customer_path(customer), class: "customer_#{customer.id}" %></td>
            <% end %>
          </tr>
            <% end %>
        </tbody>
      </table>

<% else @model == 'book' %>
  <h3>【Bookモデルの検索結果】検索ワード：<%= @content %></h3>
  <table class='table'>
                <thead>
              <tr>
                <th>活動タイトル</th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |book| %>
                <tr>
                  <td><%= book.title %></td>
                  <td><% if customer_signed_in? %>
                  <%= link_to '投稿の詳細', public_book_path(book), class: "book_#{book.id}" %>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
<% end %>