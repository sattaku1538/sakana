<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mb-3">登録情報編集</h3>

      <%= form_with(model:@customer, url:public_customer_path(@customer), local: true ,method: :put) do |f| %>
      <%= render 'layouts/error', model: f.object %>
        <div class="form-group col-xs-12">
          <%= f.label :"ユーザー名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "col-sm-3 form-control-sm name", placeholder: "最高2文字" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-sm" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"自己紹介", class: "col-sm-3 control-label" %>
          <%= f.text_field :introduction, class: "col-sm-4 form-control-sm", placeholder: "最大100文字" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"自己紹介画像", class: "col-sm-3 control-label" %>
          <%= attachment_image_tag @customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-dark save col-xs-6" %>
          <%= link_to "戻る", public_customers_path, class: "btn btn-light ml-3" %>
        <div class="mt-3">
          <%= link_to public_customers_unsubscribe_path, class: "" do%>
             <i class="fas fa-user-slash mr-2 fa-thin"></i>
             退会する
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>