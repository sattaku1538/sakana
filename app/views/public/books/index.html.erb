  <div class='container'>
    <div class='row'>
      <div class='col-md-8 offset-md-1'>
        <h2>投稿一覧</h2>
        <table class='table table-hover table-inverse'>
             <%= flash[:destroy] %>
             <%= flash[:edit] %>
            <thead>
               <%= paginate @books %>
              <tr>
                <th></th>
                <th>活動タイトル</th>
                <th>活動の実績</th>
                <th>コメント数</th>
                  <% if customer_signed_in? %>
                <th>ポイント数</th>
                  <% end %>
                <th colspan="3">※ポイント順</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr id="book_%= @book.id %>">
                <td>
                  <td><%= book.title %></td>
                </td>
                  <td>
                    <%= attachment_image_tag book, :image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
                  </td>
                  <td>
                    <%= book.book_comments.count %>
                  </td>
                  <% if customer_signed_in? %>
                  <td class="favorite-btn-<%= book.id %>"><%= render "public/favorites/favorite-btn", book: book %></td>
                  <% end %>
                  <td>
                  <% if customer_signed_in? %>
                  <%= link_to '投稿の詳細', public_book_path(book), class: "book_#{book.id}" %>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
            <%= paginate @books %>
      </div>
    </div>
  </div>