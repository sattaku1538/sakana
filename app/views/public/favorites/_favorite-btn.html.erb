<% if book.favorited_by?(current_customer) %>
  <%= link_to book.favorites.count, public_book_favorites_path(book), method: :delete, class: "fas fa-hand-holding-heart", remote: true %>
<% else %>
  <%= link_to book.favorites.count, public_book_favorites_path(book), method: :post, class: "fas fa-hand-holding-heart", remote: true %>
<% end %>