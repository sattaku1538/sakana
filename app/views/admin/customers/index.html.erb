<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h3>＜ユーザー一覧＞</h3>
      <table class='table'>
       <%= flash[:admin] %>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>プロフィール画像</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <%= paginate @customers %>
        <tbody>
          <!--↓↓ユーザー一覧-->
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= attachment_image_tag(customer, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
              <td><%= link_to 'ユーザー詳細', admin_customer_path(customer), class: "customer_#{customer.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>